sky {
    // Alternatively
    //
    //   constant {
    //       radiance = (x, y, z)
    //   }
    //
    // could be used to define the sky.
    hdri {
        path = scenes/sample/venice_sunset_1k.hdr
    }
}


plane {
    origin = (0.0, -1.2, 0.0)
    u = (1.0, 0.0, 0.0)
    v = (0.0, 0.0, -1.0)
    material = physically {
        reflectivity = (0.05, 0.05, 0.05)
        roughness = 0.8
        metalness = 0.0
    }
}

// Glass
sphere {
    origin = (-0.2, 0.1, 3.0)
    radius = 1.0
    material = translucent {
        ior = 1.5
    }
}

// Red
sphere {
    origin = (-1.5, 1.2, -0.5)
    radius = 1.8
    material = physically {
        reflectivity = (1.00, 0.71, 0.29)	
        roughness = 0.05
        metalness = 1.0
    }
}

// Light
sphere {
    origin = (0.5, 2.4, 3.0)
    radius = 1.2
    material = emissive {
        radiance = (20.0, 20.0, 10.0)
    }
}

// Mirror
sphere {

image {
    width = 512
    height = 512
    sub_pixel_sampling = true
}

sky {
    //hdri {
    //    // Source: https://hdrihaven.com/hdri/?c=skies&h=venice_sunset
    //    path = scenes/sample/venice_sunset_1k.hdr
    //}

    constant {
        radiance = (0.1, 0.1, 0.1)
    }
}

camera {
    position = (0.0, 5.0, 15.0)
    target = (0.0, 5.0, 0.0)
    up = (0.0, 1.0, 0.0)
    width = 5.0
    height = 5.0
    z_near = 5.0
    tone_mapping = clamp
    iso = 200.0
}

